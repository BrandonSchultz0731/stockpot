{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "packages": {
    "node": "22"
  },
  "steps": {
    "install": {
      "commands": [
        "cd /app/server && npm i -g pnpm && pnpm install --frozen-lockfile"
      ]
    },
    "build": {
      "commands": [
        "cd /app/server && pnpm build"
      ]
    }
  }
}
